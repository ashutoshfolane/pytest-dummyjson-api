{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["products", "total", "skip", "limit"],
  "properties": {
    "products": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": ["id", "title", "price", "category"],
        "properties": {
          "id": {
            "type": "integer",
            "minimum": 1
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "price": {
            "type": "number",
            "minimum": 0
          },
          "discountPercentage": {
            "type": "number",
            "minimum": 0
          },
          "rating": {
            "type": "number",
            "minimum": 0,
            "maximum": 5
          },
          "stock": {
            "type": "integer",
            "minimum": 0
          },
          "brand": {
            "type": "string"
          },
          "category": {
            "type": "string",
            "minLength": 1
          },
          "thumbnail": {
            "type": "string"
          },
          "images": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": true
      }
    },
    "total": {
      "type": "integer",
      "minimum": 0
    },
    "skip": {
      "type": "integer",
      "minimum": 0
    },
    "limit": {
      "type": "integer",
      "minimum": 1
    }
  },
  "additionalProperties": false
}